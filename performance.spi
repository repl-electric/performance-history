    if z > 0.27
      vortex force: 10.5*z
    else
    vortex force: 100+10.5*z
    end

    vortex turb: 1.6*z


    sleep 1/4.0
    sleep 1/4.0
    sleep 1/4.0
    sleep 1/4.0

    sleep 1/4.0
    sleep 1/4.0
    sleep 1/4.0
    sleep 1/4.0

