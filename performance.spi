def ping(n, *args)
  if args && args[0].is_a?(Numeric)
    velocity = args[0]
    args = args[1..-1]
  else
    velocity = 30
  end
  opts = resolve_synth_opts_hash_or_array(args)
  if n
    midi n, velocity *(args << {port: :iac_bus_1} << {channel: 1})
  end
endo


