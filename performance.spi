live_loop :ModularSynthsControlledByCode, sync: :unsyncable do; tick
  zero_delay [2,5,6].shuffle
  with_bpm 127 do
    dark :C3
    flip :c3, sus: (ing 2 0.5 0.25).look if spread(2,3).look
    flip :e3, sus: (ing 2 0.5 1.25).look if spread(3,9).rot(1).look

    sleep 1/4.0
    sleep 1/4.0
    sleep 1/2.0

    ze (ing :g4 :e4 :a4).look, visual: true, z: 1 if spread(7,11).look
    ze (nit :g4 4 :e4 4 :a4 4 :g4 4 :e4 4 :c5 4).look, visual: true, z: 1 if spread(3,8).look


    sleep 1/4.0
    sleep 1/4.0
    sleep 1/4.0
    sleep 1/4.0

    overclock_cc oct: (ing 0 -12 0 19).look

    flip :f3, 100


    sleep 1/2.0
    sleep 1/2.0

    if spread(3,9).rot(1).look
      flop_cc motion: 0.4
      flop :c5, 70, sus: 1

    else
      flop_cc motion: 0.3
      bitsea :f4
      flop :e4,60, sus: 1
    end

    sleep 1/2.0
    flip :c4,60, sus: 1

    sleep 1/2.0
  end
end

