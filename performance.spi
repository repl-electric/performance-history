#roots_chase force: 20, freq: 0.2, thick: 0.2, noise: 1,amp: 0.3, drag: 2
live_loop :light, sync: :unsyncable do; tick
  with_bpm 127*1 do
    score = (vec
      [[:G3], 8],
      [[:A3], 8],
      [[:C3], 4],
      REST4,
      )
    chd = score.look[0]
    sleeps = score.look[-1]
    heat chd,15, sus: sleeps, pads: [0]

    sleep sleeps
  end
end

