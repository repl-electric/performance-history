#overclock_cc motion: 0.27
flip_cc motion: 0.3
live_loop :ModularSynthsControlledByCode, sync: :unsyncable do; tick
  zero_delay [2,5,6].shuffle
  with_bpm 127 do

    flip :C3, 120 if spread(7,11).look
    flip :E3, 110 if spread(3,8).look

    if spread(7,11).look
      flip :g3, sus: 2
    end

    sleep 1/4.0
    sleep 1/4.0
    sleep 1/2.0

    if spread(7,11).look
    else
      flip :a3, sus: 4
    end


    if spread(7,11).look
      ze (vec :g2, :a2, :f2,).look, z: 1
    end
    if spread(3,8).look
      ze (nit :g3, 4, :a3, 4, :F3, 4, :g3, 4, :a3, 4, :A4, 4,).look
    end


    sleep 1/4.0
    sleep 1/4.0
    sleep 1/4.0
    sleep 1/4.0

    if spread(3,8).look
      flop_cc motion: 0.4
      flop :C4, 120, sus: 2
    else
      flop_cc motion: 0.5
      flop :E3, 120, sus: 2
    end

    sleep 1/2.0
    sleep 1/2.0

    flop :C4, 120, sus: 1/2.0

    sleep 1/2.0
    sleep 1/2.0
  end
end

