live_loop :Attune, sync: :unsyncable do; tick
  zero_delay [2,5,6].shuffle
  with_bpm 127 do
    flop_cc motion: z=(flow x=0.0, 0.5, 32,).look, min:x
    flop :A3, sus: (cycle 0.25, 0.5, 1,).look
 #   puts "Z: #{z}"
